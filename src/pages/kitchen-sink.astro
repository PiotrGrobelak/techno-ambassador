---
import Layout from '@/layouts/Layout.astro';
import KitchenSinkPage from '@/features/kitchen-sink/KitchenSinkPage.vue';
---

<Layout title="Kitchen Sink - Base Components">
  <main class="min-h-screen bg-gray-50">
    <!-- Header -->
    <div class="bg-white border-b border-gray-200">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <h1 class="text-3xl font-bold text-gray-900">
          Base Components Kitchen Sink
        </h1>
        <p class="mt-2 text-lg text-gray-600">
          Comprehensive showcase of Apple Human Interface Guidelines components
        </p>
      </div>
    </div>

    <!-- Vue App Component -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <KitchenSinkPage client:load />
    </div>
  </main>
</Layout>
