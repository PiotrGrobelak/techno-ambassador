---
import Layout from '@/layouts/Layout.astro';
import AuthNavigation from '@/features/auth/components/AuthNavigation.vue';
import ProfileCompletionBanner from '@/features/profile/components/ProfileCompletionBanner.vue';
import DashboardProfileCard from '@/features/profile/components/DashboardProfileCard.vue';

// Note: User authentication and redirect is handled by middleware
// If we reach this page, user is authenticated
---

<Layout title="DJ Dashboard - Techno Ambassador" showHeader={false}>
  <!-- Custom header for dashboard -->
  <header class="bg-white shadow-sm border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center py-4">
        <!-- Logo -->
        <div class="flex items-center">
          <a href="/" class="flex items-center">
            <div
              class="w-10 h-10 bg-gradient-to-br from-purple-600 to-blue-600 rounded-xl flex items-center justify-center mr-3"
            >
              <i class="pi pi-star text-white text-2xl"></i>
            </div>
            <span class="text-xl font-bold text-gray-900"
              >Techno Ambassador</span
            >
          </a>
        </div>

        <!-- Navigation -->
        <AuthNavigation client:load />
      </div>
    </div>
  </header>

  <!-- Dashboard Content -->
  <main class="min-h-screen bg-gray-50">
    <!-- Hero Section -->
    <div class="bg-gradient-to-br from-purple-600 to-blue-600 text-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="text-center">
          <h1 class="text-4xl font-bold mb-4">Welcome to Your DJ Dashboard</h1>
          <p class="text-xl opacity-90 max-w-2xl mx-auto">
            Manage your events, connect with fans, and grow your presence in the
            techno music scene.
          </p>
        </div>
      </div>
    </div>

    <!-- Dashboard Grid -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- Profile Completion Banner -->
      <ProfileCompletionBanner client:load />

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Main Content -->
        <div class="lg:col-span-2 space-y-6">
          <!-- Quick Stats -->
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <h2 class="text-xl font-bold text-gray-900 mb-4">Quick Stats</h2>
            <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
              <div class="text-center p-4 bg-purple-50 rounded-lg">
                <div class="text-2xl font-bold text-purple-600">0</div>
                <div class="text-sm text-gray-600">Upcoming Events</div>
              </div>
              <div class="text-center p-4 bg-blue-50 rounded-lg">
                <div class="text-2xl font-bold text-blue-600">0</div>
                <div class="text-sm text-gray-600">Total Events</div>
              </div>
              <div class="text-center p-4 bg-green-50 rounded-lg">
                <div class="text-2xl font-bold text-green-600">0</div>
                <div class="text-sm text-gray-600">Profile Views</div>
              </div>
            </div>
          </div>

          <!-- Recent Activity -->
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <h2 class="text-xl font-bold text-gray-900 mb-4">
              Recent Activity
            </h2>
            <div class="text-center py-8">
              <i
                class="pi pi-clipboard text-gray-300 text-6xl mx-auto mb-4 block"
              ></i>
              <p class="text-gray-500">
                No recent activity yet. Start by creating your first event!
              </p>
            </div>
          </div>
        </div>

        <!-- Sidebar -->
        <div class="space-y-6 flex flex-col gap-6">
          <!-- Profile Card -->
          <DashboardProfileCard client:idle />

          <!-- Quick Actions -->
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <h3 class="font-semibold text-gray-900 mb-4">Quick Actions</h3>
            <div class="space-y-3">
              <a
                href="/dj/events"
                class="w-full text-left p-3 hover:bg-gray-50 text-black rounded-lg transition-colors flex items-center"
              >
                <i class="pi pi-plus text-purple-600 text-xl mr-3"></i>
                Add New Event
              </a>
              <a
                href="/dj/profile"
                class="w-full text-left p-3 hover:bg-gray-50 text-black rounded-lg transition-colors flex items-center"
              >
                <i class="pi pi-user text-blue-600 text-xl mr-3"></i>
                Update Profile
              </a>
              <button
                class="w-full text-left p-3 hover:bg-gray-50 text-black rounded-lg transition-colors flex items-center"
              >
                <i class="pi pi-chart-bar text-green-600 text-xl mr-3"></i>
                View Analytics
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>
