---
import './src/styles/global.css';
import AuthNavigation from '../shared/components/AuthNavigation.vue';

export interface Props {
  title?: string;
  showHeader?: boolean;
}

const { title = 'Techno Ambassador', showHeader = true } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Discover electronic music DJs, explore techno events, and connect with the electronic music community."
    />
    <title>{title}</title>
  </head>
  <body>
    {showHeader && (
      <header class="bg-white shadow-sm border-b border-gray-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex justify-between items-center py-4">
            <!-- Logo -->
            <div class="flex items-center">
              <a href="/" class="flex items-center">
                <div class="w-10 h-10 bg-gradient-to-br from-purple-600 to-blue-600 rounded-xl flex items-center justify-center mr-3">
                  <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2L13.09 8.26L22 9L13.09 9.74L12 16L10.91 9.74L2 9L10.91 8.26L12 2Z"/>
                  </svg>
                </div>
                <span class="text-xl font-bold text-gray-900">Techno Ambassador</span>
              </a>
            </div>

            <!-- Navigation - now uses Pinia store directly -->
            <AuthNavigation client:load />
          </div>
        </div>
      </header>
    )}
    
    <slot />
  </body>
</html>

<style is:global>
  html,
  body {
    margin: 0;
    padding: 0;
    width: 100%;
    min-height: 100%;
    font-family: system-ui, sans-serif;
    background-color: #f9fafb;
  }

  * {
    box-sizing: border-box;
  }

  /* Ensure smooth scrolling for anchor links */
  html {
    scroll-behavior: smooth;
  }
</style>
